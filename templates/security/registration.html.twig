{% extends "base.html.twig" %}
{% block title %}
{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel-login">
				<div class="panel-heading">
					<div class="row mb_20">
						<div class="col-xs-6">
							<a href="{{ path('security_login')}}" >
								Login
							</a>
						</div>
						<div class="col-xs-6">
							<a href="{{ path('security_registration')}}" class="active" id="login-form-link"	>
								Register
							</a>
						</div>
					</div>
					<hr>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							{{form_start(form)}}
							<div class="col-lg-12">
							{{form_row(form.username,{'label':"Nom d\'utilisateur : ",'attr': {'placeholder': "Nom d'utilisateur"}}
							)}}
							</div>
							<div class="col-lg-12">
							{{form_row(form.email,{'label':"Adresse email",'attr': {'placeholder': "Adresse mail"}}
							)}}
							</div>
							<div class="col-lg-12">
							{{form_row(form.password,{'label':"Mot de passe",'attr': {'placeholder': "Mot de passe"}}
							)}}
							</div>
							<div class="col-lg-12">
							{{form_row(form.confirm_password,{'label':"Confirmation du mot de passe",'attr': {'placeholder': "Confirmation du mot de passe"}}
							)}}
							</div>
							<hr>
							<div class="col-lg-12" style="padding-top:10px">
							<button type="submit" class="btn btn-primary">
								Inscription
							</button>
							</div>	
							{{form_end(form)}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div></div></div>{% endblock %}
